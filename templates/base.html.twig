        {% block stylesheets %}{% endblock %}
   
    </head>
    <body>
<header>
    <nav id="navbar">
    <ul>
    <li class ="navbutton" >Les Gifs les plus récents </li>
     {% if is_granted('IS_AUTHENTICATED_FULLY') %}
      <a href="{{ path('gif_content',{'username': username}) }}"><li class="navbutton">Gérer mes gifs</li></a>
      <a href="{{ path('my_account') }}"><li class="navbutton">Mon compte</li></a>
        <a href="{{ path('app_logout') }}"><li class="logout">Se deconnecter</li></a>
    {% else %}
    <a href="{{ path('app_login')}}"><li class ="navbutton">Se connecter</li></a>
       
    {% endif %}
   
    </ul>
    </nav>
</header>
    
<div class="container">
            <h1 class="homepage-title">{% block titleInterface %}O'mega-gif{% endblock %}</h1>
            

        

            <h2>{% block titlePage %}{% endblock %}</h2>

            {% block body %}{% endblock %}

</div>
        
        
        {% block javascripts %}
        <script src="https://kit.fontawesome.com/7d50825b89.js"></script>
