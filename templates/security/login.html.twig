{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form id="signin-form" method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {# {% if app.user %}
        <div class="mb-3">
            Vous ête connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %} #}

    <h1 class="form-title">Connectez vous</h1>
    <label for="inputUsername" class="sr-only">nom d'utilisateur</label>
    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" placeholder="Nom d'utilisateur" required autofocus>
    <label for="inputPassword" class="sr-only">mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" required>

    <input type="hidden" name="_csrf_token"
    value="{{ csrf_token('authenticate') }}">

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
    <div id="buttons-loginForm">
     <button id ="btn-signin" class="btn btn-lg btn-primary" type="submit">
        Valider
    </button>
      <a href="{{ path('app_signup')}}"><li id ="btn-signup" class="btn btn-lg btn-primary">
        S'inscrire
    </li></a>
    </div>
   
</form>
{% endblock %}
